@{
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<head class="back">
    <style>
        .alert {
            padding: 20px;
            background-color: #f44336;
            color: white;
            opacity: 1;
            transition: opacity 0.6s;
            margin-bottom: 15px;
        }
        .back {
            filter: blur(8px);
            -webkit-filter: blur(8px);
            /* Full height */
            height: 100%;
            /* Center and scale the image nicely */
            background-position: center;
            background-repeat: no-repeat;
            background-size: cover;
        }
            .alert.success {
                background-color: #4CAF50;
            }

            .alert.info {
                background-color: #2196F3;
            }

            .alert.warning {
                background-color: #ff9800;
            }

        .closebtn {
            margin-left: 15px;
            color: white;
            font-weight: bold;
            float: right;
            font-size: 22px;
            line-height: 20px;
            cursor: pointer;
            transition: 0.3s;
        }

        .block {
        }

        .closebtn:hover {
            color: black;
        }

        .square {
            position: relative;
            width: 70%;
            height:100px;
            width:400px;
           @* margin-top:auto;
            margin-bottom:auto;*@
            margin-left:auto;
            margin-right:auto;

        }
        .parent {
            background: white;
            height: 400px;
            width:800px;
            position: relative;
        }

        .child {
            background: white;
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
        }
            .square:after {
                content: "";
                display: block;
                padding-bottom: 100%;
            }

        .content {
            position: absolute;
            width: 100%;
            height: 100%;
        }
    </style>
</head>

<body style="background-color:lightgray">
    <center>
        <div class="alert-warning square parent" style="box-shadow: 5px 3px 15px #999999">
            <div class="child">
                <strong style="font-size:30px;color: black">Logout of Mini Tekstac?</strong>
                <br /><br /><br />
