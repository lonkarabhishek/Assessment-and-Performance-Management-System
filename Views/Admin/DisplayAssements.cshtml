            @Html.ActionLink("Edit", "Edit", new { id=item.AssessmentCode }) |
            @Html.ActionLink("Details", "Details", new { id=item.AssessmentCode }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.AssessmentCode })
        </td>*@
    </tr>
}

</table>
