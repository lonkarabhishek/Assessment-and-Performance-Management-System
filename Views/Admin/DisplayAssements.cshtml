@model IEnumerable<Mini_Tekstac_Question_Paper_Generation.Models.AssessmentModel>

@{
    ViewBag.Title = "DisplayAssements";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Assessments details</h2>

<p>
    @Html.ActionLink("Add new assessment", "AddAssessment","Admin")
</p>
<table class="table table-striped">
    <tr>
        <th>
            Assessment Code
        </th>
        <th>
           Assessment Name
        </th>
        <th>
            Assessment Date
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem=> item.AssessmentCode)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AssessmentName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AssessmentDate)
        </td>
