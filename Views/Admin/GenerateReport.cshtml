@model IEnumerable<Mini_Tekstac_Question_Paper_Generation.Models.ExamaAndAssessmentGiven>

@{
    ViewBag.Title = "GenerateReport";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>GenerateReport</h2>


<table class="table table-striped">
    <tr>
        <th>
            Assessment Code
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AssessmentModel.AssessmentName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ExamDetails.ExamName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UserModel.First_Name)
        </th>
        <th>
            Last Name
        </th>


        <th>
            @Html.DisplayNameFor(model => model.Score)
        </th>
        <th>
            Percentage of Marks
        </th>
        <th>
            Assessment Given Date
        </th>
        <th>
            Feedback Given?
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.AssessmentCode)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.AssessmentModel.AssessmentName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.ExamDetails.ExamName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.UserModel.First_Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.UserModel.Last_Name)
    </td>


    <td>
        @Html.DisplayFor(modelItem => item.Score)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.percentageMarks)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.AssessmentGiven)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.FeedbackGive)
    </td>
    <td>
        @Html.ActionLink("Generate report for assessment code "+item.AssessmentCode, "Report", new { AssessmentCode = item.AssessmentCode }) 
    </td>
</tr>
    }

</table>
